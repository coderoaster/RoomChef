<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    >

    <ImageView
        android:id="@+id/img_updqteInfo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/image"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="개인정보수정"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="(필수) -없이 숫자만 입력해주세요."
            android:inputType="number"
            android:textSize="20dp"
            android:fontFamily="@font/yanolja"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/edit_update_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20dp"
            android:fontFamily="@font/yanolja"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비밀번호확인"
            android:gravity="center_horizontal"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_update_pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20dp"
            android:fontFamily="@font/yanolja"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_update_chk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EF0A0A"
        android:textSize="20dp"/>
<LinearLayout
    android:padding="20dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/yanolja"/>
    <Button
        android:id="@+id/btn_update_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/yanolja"/>

</LinearLayout>

</LinearLayout>