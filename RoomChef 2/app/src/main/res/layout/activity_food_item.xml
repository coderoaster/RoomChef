<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="match_parent"
    tools:context=".SelectFood">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            >
            <Button
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤️"
                android:layout_gravity="right"
                android:background="#00FF0000"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/btn_unlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="️🖤"
                android:layout_gravity="right"
                android:background="#00FF0000"
                android:textSize="20dp"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/select_recipe_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/select_recipe_view"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/select_recipe_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="  식재료"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/select_recipe_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="  조리법"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/select_recipe_how"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <Button
                    android:id="@+id/reply_insert"
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="후기작성"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    />
                <Button
                    android:id="@+id/reply_view"
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="후기보기"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
